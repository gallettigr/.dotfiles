#!/usr/bin/env bash

# Add user `.bin` and dotfiles `bin` to path
export PATH="$HOME/.bin:$USER_DOTFILES_DIR/bin:$PATH"

# Add user local `bin` to path if needed
if [[ ":$PATH:" != *"/usr/local/bin"* ]]; then
  export PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

# Add PHP binaries to path if installed
if [[ -d $(brew --prefix php)/bin ]]; then
  export PATH="$PATH:$(brew --prefix php)/bin"
  if [[ -d $HOME/.composer/vendor/bin ]]; then
    export PATH="$PATH:$HOME/.composer/vendor/bin"
  fi
fi
