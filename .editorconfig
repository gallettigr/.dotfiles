root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,js,json,scss,ts,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.txt]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{scala,sc,sbt}]
indent_size = 2

[*.{xml,html}]
indent_size = 4
indent_style = tab
